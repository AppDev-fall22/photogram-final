<div>
  <div>
    <h1>
      List of photos
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <form action="/insert_photo" method="post">
      <div>
        <input type="hidden" id="comments_count_box" name="query_comments_count">
      </div>

        <label for="image_box">
          Image
        </label>

        <input type="file" id="image_box" name="query_image">

        <label for="caption_box">
          Caption
        </label>

        <textarea id="caption_box" name="query_caption" rows="3"></textarea>

        <input type="hidden" id="likes_count_box" name="query_likes_count">
        <input type="hidden" id="owner_id_box" name="query_owner_id" value="<%=session[:user_id]%>">

      <button>
        Add photo
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Caption
        </th>

        <th>
          Image
        </th>

        <th>
          Likes
        </th>

        <th>
          Owner
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
      <tr>
        <td>
          <%= a_photo.image %>
        </td>

        <td>
          <%= a_photo.caption %>
        </td>

        <td>
          <%= a_photo.likes_count %>
        </td>

        <td>
          <%= a_photo.owner_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_photo.updated_at) %> ago
        </td>

        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
