<h1><%=@the_user.username%></h1>

<dl>
  <dt>Private</dt>
    <dd><%=@the_user.private%></dd>
  <dt>Followers</dt>
    <dd>[[Follower count]]</dd>
    <dd><a href="/">Follow/Unfollow</a>
  <dt>Following</dt>
    <dd>[[Following count]]</dd>
</dl>

<ul>
  <li>
    <a href="/users/<%=@the_user.username%>">Profile</a>
  </li>
  <li>
    <a href="/users/<%=@the_user.username%>/liked_photos">Liked photos</a>
  </li>
  <li>
    <a href="/users/<%=@the_user.username%>/feed">Feed</a>
  </li>
  <li>
    <a href="/users/<%=@the_user.username%>/discover">Discover</a>
  </li>
</ul>

<h2>Own photos (<%=@the_user.photo_list.count%>)</h2>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th>Likes</th>
    <th></th>
  </tr>

  <%@user_photos.each do |the_photo|%>
    <tr>
      <td><img src="<%=the_photo.image%>"></img></td>
      <td><%=the_photo.owner.username%></td>
      <td><%=the_photo.caption%></td>
      <td><%=time_ago_in_words(the_photo.created_at)%></td>
      <td><%=the_photo.likes_count%></td>
      <td><a href="/photos/<%=the_photo.id%>">Show details</a>
    </tr>
  <%end%>
</table>
