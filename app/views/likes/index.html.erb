<h1><%=@the_user.username%></h1>

<dl>
  <dt>Private</dt>
    <dd><%=@the_user.private%></dd>
  <dt>Followers</dt>
    <dd>[[Follower count]]</dd>
    <dd><a href="/">Follow/Unfollow</a>
  <dt>Following</dt>
    <dd>[[Following count]]</dd>
</dl>

<ul>
  <li>
    <a href="/users/<%=@the_user.username%>">Profile</a>
  </li>
  <li>
    <a href="/users/<%=@the_user.username%>/liked_photos">Liked photos</a>
  </li>
  <li>
    <a href="/users/<%=@the_user.username%>/feed">Feed</a>
  </li>
  <li>
    <a href="/users/<%=@the_user.username%>/discover">Discover</a>
  </li>
</ul>

<h2>Liked photos (<%=@liked_photos.count%>)</h2>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Image
        </th>

        <th>
          Owner
        </th>

        <th>
          Caption
        </th>

        <th>
          Posted
        </th>

        <th>
          Likes
        </th>

        <th>
        </th>
      </tr>

      <% @liked_photos.each do |a_like| %>
      <tr>
        <td>
          <%= a_like.photo.image %>
        </td>

        <td>
          <%= a_like.photo.owner.username %>
        </td>

        <td>
          <%= a_like.photo.caption %>
        </td>

        <td>
          <%= time_ago_in_words(a_like.created_at) %> ago
        </td>
        <td>
          <%= a_like.photo.likes_count %>
        </td>

        <td>
          <a href="/photos/<%= a_like.photo_id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
